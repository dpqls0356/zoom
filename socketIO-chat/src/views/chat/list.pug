extends ../layout/base.pug
block header
    include ../partials/header/roomlistHeader.pug
block content
    main.chatroom-list
        div.chatroom-serch
            svg.serch-icon(width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5 ")
                path(stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z")
            input(type="text" placeholder="Search Chatting Room Name..." )
        div.toggle
            div.toggle-text
                div.focus.joined
                    span Joined
                div.available
                    span Available
            div.toggle-dot
        div.scroll-y-hidden.room-list#list
        div.empty
    div.side-bar.background--base.none
        div.side-bar-header
            svg.header-purple.close-sidebar-btn(width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6")
                path(stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18")
        div.user-info
            div.user-profile
              img(src=user.profile_url || "/img/user.png")
            div.user-name #{user.nickname}
        div.sidebar-list
            div.edit-userinfo 내 정보 수정
            div.logout
                a(href="/auth/logout") 로그아웃
    script(type="module" src="/js/chat/roomList.js")
    script(src="/js/headers/chatRoomListHeader.js")

