extends ../layout/base.pug
block header
    include ../partials/header/chatlistHeader.pug
block content
    main.chatroom-list
        div.chatroom-serch
            svg.serch-icon(width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5 ")
                path(stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z")
            input(type="text" placeholder="Search Chatting Room Name..." )
        div.toggle
            div.toggle-text
                div.focus.joined
                    span Joined
                div.available
                    span Available
            div.toggle-dot
        div.scroll-y-hidden.room-list#list
        div.empty
        //- 데이터 없으면 x
        //- 있으면 list 보여주기
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
    script(type="module" src="/js/chat/chatList.js")
    script(src="/js/headers/chatRoomListHeader.js")

